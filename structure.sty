\mdfsetup{skipabove=\topskip,skipbelow=\topskip}

% taken from mdframed documentation example 6
\newenvironment{basicBoxMin}[2][]{
  \ifstrempty{#1}{
    \mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=blue!20]
             {\strut #2};}}
  }
             {\mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=blue!20]
             {\strut #2:~#1};}}
  }
  \mdfsetup{innertopmargin=10pt,linecolor=blue!20,
    linewidth=2pt,topline=true,
    frametitleaboveskip=\dimexpr-\ht\strutbox\relax,}
  \begin{mdframed}[]\relax
}{\end{mdframed}}



% ---- pretty ----

% the below template for boxes is taken from Neil's tex stuff
\newtcolorbox[auto counter,number within=chapter]{basicBoxPretty}[4][]{
	colback=#4!5!white,
	colframe=#4!75!black,
	%colupper=#4!50!black,
	fonttitle=\bfseries,
	rounded corners = all,
	title=#2 \thetcbcounter: #3,
	#1
}

